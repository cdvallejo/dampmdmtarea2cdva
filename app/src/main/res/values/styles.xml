<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para el RecyclerView -->
    <style name="RecyclerViewStyle">
        <item name="android:background">#8BC34A</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Estilo para las tarjetas del CardView -->
    <style name="CardViewStyle" >
        <item name="cardBackgroundColor">#8AE68F</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Estilo para la vista de detalles del personaje -->
    <style name="CharacterDetailViewStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">#A4E2A8</item>
    </style>
</resources>
